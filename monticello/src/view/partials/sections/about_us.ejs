<% const menu = ['Simple & mordern', 'About', 'Portfolio', 'Testimonials', 'Contacts'] %>


<section class="about">
	<div class="container">
		<div class="about__wrap">
			<div class="row">
				<div class="col-lg-3 col-md-4">
					<img src="../img/mon-logo.png" alt="logo">
				</div>
				<div class="col-lg-7 col-md-6 d-flex justify-content-center">
					<nav class="about__navbar navbar-expand-lg navbar-light bg-light">
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarNav">
							<ul class="about__navbar-nav">
								<li class="nav-item active">
									<a class="about__nav-link" href="#">about us</a>
								</li>
								<li class="nav-item">
									<a class="about__nav-link" href="#">projects</a>
								</li>
								<li class="nav-item">
									<a class="about__nav-link" href="#">news</a>
								</li>
								<li class="nav-item">
									<a class="about__nav-link" href="#">contact</a>
								</li>
							</ul>
						</div>
					</nav>
				</div>
				<div class="col-lg-2 col-md-2 d-flex justify-content-between align-items-center">
					<ul class="about__social">
						<li>
							<a class="social__item" href="#" target="_blank">
								<i class="fab fa-facebook-f"></i>
							</a>
						</li>
						<li>
							<a class="social__item" href="#" target="_blank">
								<i class="fab fa-twitter"></i>
							</a>
						</li>
						<li>
							<a class="social__item" href="#" target="_blank">
								<i class="fab fa-instagram"></i>
							</a>
						</li>
					</ul>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-xl-8 col-lg-7 col-md-10">
					<ul class="owl-carousel">
						<% menu.forEach(item => { %>
						<li>
							<h1 class="about__title"><%= item %></h1>
							<p class="about__text">We make the world's beautiful every day</p>
						</li>
						<%})%>
					</ul>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-lg-2 col-md-2 justify-content-center">
					<a class="about__arrow" href="#what">
						<i class="arrow__item"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
